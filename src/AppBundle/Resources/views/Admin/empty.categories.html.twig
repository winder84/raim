{% extends base_template %}

{% block title %}{{ 'title_dashboard'|trans({}, 'SonataAdminBundle') }}{% endblock%}
{% block breadcrumb %}{% endblock %}
{% block content %}
    {{ include('AppBundle:Admin:menu.block.html.twig') }}
    <form name="disableAllEmpty" method="post" action="/admin/emptyCategories" style="margin: 10px;">
        <div class="row-fluid">
            <div class="span6">
                <input type="hidden" name="disableAll" value="1">
                <input type="submit" class="btn btn-danger" value="Отключить все пустые категории" />
            </div>
        </div>
        {% for resultCategory in resultCategories %}
            <br />
            {{ resultCategory.name }} | <a target="_blank"  href="/admin/app/category/{{ resultCategory.id }}/edit" style="color: orangered;">ред.</a>
            <input type="hidden" name="categoriesToDisable[{{ resultCategory.id }}]" value="{{ resultCategory.id }}">
        {% endfor %}
    </form>
{% endblock %}