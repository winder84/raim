{% extends 'AppBundle:Default:layout.html.twig' %}

{% block content %}
	<div class="shopBlock">
		<div class="shopBlockDiv">
			<div class="shopUniBlock">
				<h2 class="itemName">{{ site.title }}</h2>
				<a rel="nofollow" onclick="yaCounter32562670.reachGoal('ON_SHOP_CLICK'); return true;" href="{{ site.url }}" title="{{ site.title }} - сайт магазина"><img src="{{ site.logoUrl }}"></a>
			</div>
			<div class="shopUniBlock">
				<h2 class="itemName">Доставка:</h2>
				<div>
					<a rel="nofollow" onclick="yaCounter32562670.reachGoal('ON_SHOP_CLICK'); return true;" href="{{ site.deliveryUrl }}" title="{{ site.title }} - доставка">Перейдите на сайт магазина</a> для получения информации по доставке.
				</div>
			</div>
			<div class="shopUniBlock">
				<h2 class="itemName">Оплата:</h2>
				<div>
					<a rel="nofollow" onclick="yaCounter32562670.reachGoal('ON_SHOP_CLICK'); return true;" href="{{ site.paymentUrl }}" title="{{ site.title }} - оплата">Перейдите на сайт магазина</a> для получения информации по способам оплаты.
				</div>
			</div>
		</div>
		<div class="shopBlockDiv">
			<div class="shopUniBlock" style="margin: 0 0 0 50px; width: 620px; text-align: center;">
				<h2 class="itemName">Товары магазина:</h2>
				<div>
					<a href="/shop/{{ site.alias }}" title="{{ site.title }} - товары">Перейти к товарам магазина</a>
				</div>
			</div>
			<div class="shopDescBlock">
				<h2 class="itemName">Описание:</h2>
				<div class="itemDesription">{{ site.description|raw }}</div>
			</div>
		</div>
	</div>
	<hr/>
	<div class="vendorBlock">
		<h1>Бренды магазина:</h1>
		<ul class="vendorBlockUl">
			{% for vendor in vendors %}
				<li>
					<a href="/vendor/{{ vendor.0.alias }}">{{ vendor.0.name }}</a>
					<p>({{ vendor.0.products|length }} шт.)</p>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}